<!-- #region Modal Clientes -->
<div class="modal fade" data-backdrop="static" data-keyboard="false" id="modalContactoFiltro" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Filtro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="form-group col-xs-12 col-md-12">
                                <small>Nombre</small>
                                <input type="text" class="form-control" id="txtNombreFiltro" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-xs-12 col-md-12">
                                <small>Apellido Paterno</small>
                                <input type="text" class="form-control" id="txtApellidoPaternoFiltro" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-xs-12 col-md-12">
                                <small>Apellido Materno</small>
                                <input type="text" class="form-control" id="txtApellidoMaternoFiltro" />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-xs-12 col-md-12">
                                <small>Teléfono</small>
                                <input type="text" class="form-control" id="txtTelefonoFiltro" />
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-xs-12 col-md-12">
                                <small>Dirección</small>
                                <textarea class="form-control" id="txtDireccionContactoFiltro"></textarea>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-xs-12 col-md-12">
                                <small>Puesto</small>
                                <input type="text" class="form-control" id="txtPuestoFiltro" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnFiltrarContacto">Filtrar</button>
            </div>
        </div>
    </div>
</div>
<!-- #endregion -->